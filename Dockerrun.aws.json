{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "client-volume",
      "host": {
        "sourcePath": "/var/client/current/"
      }
    },
    {
      "name": "api-volume",
      "host": {
        "sourcePath": "/var/api/current/"
      }
    }
  ],
  "containerDefinitions": [
    {
      "image": "randommargin/hackathon:client",
      "name": "hackathon-client",
      "essential": true,
      "links": [
        "hackathon-api"
      ],
      "mountPoints": [
        {
          "sourceVolume": "client-volume",
          "containerPath": "/client",
          "readOnly": true
        }
      ],
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "memory": 500
    },
    {
      "image": "randommargin/hackathon:api",
      "name": "hackathon-api",
      "essential": true,
      "environment": [
        {
          "name": "PORT",
          "value": "5000"
        },
        {
          "name": "MONGODB_URI",
          "value": "mongodb+srv://buckwheatman:qvM0j4LKieLJkZGn@cluster0.oscfi.mongodb.net/Statistics?retryWrites=true&w=majority"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "api-volume",
          "containerPath": "/api",
          "readOnly": true
        }
      ],
      "portMappings": [
        {
          "containerPort": 5000,
          "hostPort": 5000
        }
      ],
      "memory": 500
    }
  ]
}